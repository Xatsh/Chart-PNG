{
	"compilerOptions": {
		"target": "ESNext",
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["src/*"]
		},
		"resolveJsonModule": true,
		"strict": true,
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts"]
}
